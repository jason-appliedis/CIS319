<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="TOP_LEFT" hgap="8.0" vgap="0.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="TipCalculatorController">
  <children>
  <!-- Fahrenheit -->
    <Label 
      text="Fahrenheit: " 
      textAlignment="RIGHT" 
      GridPane.columnIndex="0" 
      GridPane.rowIndex="0" />

    <TextField 
      fx:id="degreesF" 
      prefWidth="-1.0" 
      GridPane.columnIndex="1" 
      GridPane.rowIndex="0" 
      editable/>
    
    <!-- slider -->
    <Slider 
      fx:id="degreesSlider" 
      blockIncrement="5.0" 
        majorTickUnit="1.0" 
        max="150"  
        min="-50"
        minorTickCount="1" 
        showTickLabels="false" 
        showTickMarks="false" 
        snapToTicks="true" 
        value="32" 
        GridPane.hgap="5"
        GridPane.vgap="5"
        GridPane.padding= "14"
        GridPane.columnIndex="1"
        GridPane.rowIndex="2" />
    
    <!-- Celcius -->
    <Label 
      text="Celcius: " 
      textAlignment="RIGHT" 
      GridPane.columnIndex="0" 
      GridPane.rowIndex="3" />
    <TextField 
      fx:id="degreesC" 
      prefWidth="-1.0" 
      GridPane.columnIndex="1" 
      GridPane.rowIndex="3" />

  </children>
  <columnConstraints>
    <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="-1.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="-1.0" />
  </columnConstraints>
  <padding>
    <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
  </padding>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
</GridPane>
